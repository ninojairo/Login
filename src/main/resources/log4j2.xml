<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) -%m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.opensimphony.xwork2" level="debug"/>
        <Logger name="org.apache.struts2" level="debug"/>

        <Root level="warn">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>